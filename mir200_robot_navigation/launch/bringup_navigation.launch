<launch>
    <node name="map_server" pkg="map_server" type="map_server" args="$(find mir200_robot_navigation)/map/map.yaml"/>

    <node pkg="amcl" type="amcl" name="amcl" output="screen">
        <rosparam file="$(find mir200_robot_navigation)/config/amcl_params.yaml" command="load"/>
    </node>

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find mir200_robot_navigation)/config/move_base_params.yaml" command="load" />
        <rosparam file="$(find mir200_robot_navigation)/config/costmap_common_params.yaml" command="load" ns ="global_costmap" />
        <rosparam file="$(find mir200_robot_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find mir200_robot_navigation)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find mir200_robot_navigation)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find mir200_robot_navigation)/config/base_local_planner_params.yaml" command="load" />
        <rosparam file="$(find mir200_robot_navigation)/config/navfn_global_planner_params.yaml" command="load" />
    </node>

</launch>